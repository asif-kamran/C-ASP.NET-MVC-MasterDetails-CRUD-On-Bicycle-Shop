<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    @RenderSection("styles", required: false)
    <style>
        body {
            background-color: cadetblue;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg mb-4" style="background-color:lightgreen;height:80px;">
        <div class="container-fluid">
            <a class="navbar-brand" style="color: white;" href="#">BiCycle</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Company", "Index", "Companies", new { }, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Model", "Create", "Models", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Cycles", "Index", "Cycles", new { }, new { @class = "nav-link" })
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>



    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
